<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.SUNSET" parent="AppTheme">
        <item name="timelineIcon">@drawable/ic_sun_icon</item>
        <item name="timelineLineColor">@color/sunsetTimelineColor</item>
        <item name="backgroundColor">@color/sunsetBackgroundColor</item>
        <item name="hintTextColor">@color/sunsetLighterTextColor</item>
        <item name="toolbarColor">@color/sunsetToolbarColor</item>
        <item name="toolbarItemColor">@color/sunsetToolbarItemColor</item>
        <item name="statusBarColor">@color/sunsetStatusBarColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="timelineDateTextColor">@color/sunsetPrimaryColor</item>
        <item name="timelineContentTextColor">@color/sunsetPrimaryColor</item>
        <item name="entryHeaderTextColor">@color/sunsetPrimaryColor</item>
        <item name="entryContentTextColor">@color/sunsetPrimaryColor</item>
        <item name="highlightColor">@color/sunsetAndroidWidgetColor</item>
