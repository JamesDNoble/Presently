        <item name="timelineDateTextColor">@color/moonlightMainTextAndButtonColor</item>
        <item name="timelineContentTextColor">@color/moonlightMainTextAndButtonColor</item>
        <item name="entryHeaderTextColor">@color/moonlightDateTextEntryScreenTextColor</item>
        <item name="entryContentTextColor">@color/moonlightDateTextEntryScreenTextColor</item>
        <item name="highlightColor">@color/moonlightAndroidWidgetColor</item>
