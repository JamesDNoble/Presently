<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:statusBarColor">?attr/statusBarColor</item>
        <item name="colorPrimary">?attr/timelineLineColor</item>
        <item name="colorSecondary">?attr/highlightColor</item>
        <item name="android:textColorSecondary">?attr/hintTextColor</item>
        <item name="android:colorBackground">?attr/backgroundColor</item>
        <item name="snackbarButtonStyle">@style/snackbar_button</item>
        <item name="timelineIcon">@drawable/ic_flower</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="timelineLineColor">@color/originalTimelineColor</item>
        <item name="backgroundColor">@color/originalBackgroundColor</item>
        <item name="hintTextColor">@color/originalHintTextColor</item>
        <item name="toolbarColor">@color/originalTimelineColor</item>
        <item name="toolbarItemColor">@color/originalBackgroundColor</item>
        <item name="statusBarColor">@color/originalTimelineColor</item>
        <item name="timelineDateTextColor">@color/originalTimelineColor</item>
        <item name="timelineContentTextColor">@color/originalTimelineColor</item>
        <item name="entryHeaderTextColor">@color/originalTimelineColor</item>
        <item name="entryContentTextColor">@color/originalTimelineColor</item>
        <item name="highlightColor">@color/originalTimelineColor</item>
        <item name="fontFamily">@font/larsseit_medium</item>
        <item name="android:fontFamily">@font/larsseit_medium</item>
    </style>

    <style name="snackbar_button" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?attr/highlightColor</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <!-- CHANGES THE DIALOG BACKGROUND COLOR!       -->
        <item name="android:colorBackground">#FFFFFF</item>
        <!-- CHANGES BODY TEXT COLOR IN DIALOGS BUT NOT IN TIME PICKER     -->
        <item name="android:textColorPrimary">#363636</item>
        <!-- CHANGES HEADER TEXT COLOR IN DIALOGS BUT NOT IN TIME PICKER     -->
        <item name="android:textColor">#000000</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#8B8B8B</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextAppearance.Title" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="fontFamily">@font/value</item>
        <item name="android:fontFamily">@font/value</item>
    </style>

    <style name="TextAppearance.Date" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/value</item>
        <item name="android:fontFamily">@font/value</item>
    </style>

    <style name="TextAppearance.SearchDate" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="fontFamily">@font/value</item>
        <item name="android:fontFamily">@font/value</item>
    </style>
</resources>